<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.antigravity.torrentstreamer.ui.PlaylistCreatorController">
   <children>
      <VBox layoutX="20.0" layoutY="20.0" spacing="10.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            <Label text="Create New Playlist" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <TextField fx:id="nameField" promptText="Playlist Name" />
            <TextField fx:id="descriptionField" promptText="Description (Optional)" />
            <Button text="Add Files" onAction="#handleAddFiles" />
            <ListView fx:id="filesListView" VBox.vgrow="ALWAYS" />
            <Button fx:id="createButton" text="Create &amp; Share Playlist" onAction="#handleCreatePlaylist" maxWidth="Infinity" />
            <Label fx:id="statusLabel" text="" />
         </children>
      </VBox>
   </children>
</AnchorPane>
